{
  "openapi": "3.0.0",
  "info": {
    "title": "Minimal Tasks API",
    "version": "1.0.0"
  },
  "paths": {
    "/tasks": {
      "get": {
        "summary": "Get tasks",
        "responses": {
          "200": { "description": "OK" }
        }
      },
      "post": {
        "summary": "Create task",
        "responses": {
          "201": { "description": "Created" }
        }
      }
    },
    "/tasks/{id}": {
      "get": {
        "summary": "Get task by id",
        "responses": {
          "200": { "description": "OK" },
          "404": { "description": "Not found" }
        }
      },
      "delete": {
        "summary": "Delete task",
        "responses": {
          "204": { "description": "Deleted" }
        }
      }
    }
  }
}
