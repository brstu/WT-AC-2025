generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  
  records   HealthRecord[]
}

model HealthRecord {
  id          Int      @id @default(autoincrement())
  type        String
  value       String
  date        DateTime
  goal        String?
  notes       String?
  ownerId     Int
  owner       User     @relation(fields: [ownerId], references: [id])
  createdAt   DateTime @default(now())
}
