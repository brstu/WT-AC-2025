{
  "name": "starband-fan-club",
  "version": "1.0.0",
  "description": "Официальный фан-клуб группы StarBand - Лабораторная работа 02",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "lint": "eslint src/scripts/*.js tests/*.js --fix",
    "lint:check": "eslint src/scripts/*.js tests/*.js",
    "validate": "npm run lint:check && npm run test"
  },
  "keywords": [
    "fan-club",
    "starband",
    "web-technologies",
    "lab-work"
  ],
  "author": "Логинов Глеб",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/scripts/**/*.js"
    ],
    "transform": {}
  }
}
