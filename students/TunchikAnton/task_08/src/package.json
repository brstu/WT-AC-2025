{
  "name": "festival-films",
  "version": "1.0.0",
  "scripts": {
    "start": "node server.js",
    "build": "mkdir -p build && echo '<!DOCTYPE html><html><head><title>Festival Films</title><style>body{font-family:Arial;margin:20px}</style></head><body><div id=\"root\"></div><script src=\"bundle.js\"></script></body></html>' > build/index.html && echo 'console.log(\"Bundle loaded\")' > build/bundle.js",
    "test": "jest --config jest_config.js",
    "test:e2e": "cypress run --config-file cypress_config.js",
    "test:watch": "jest --config jest_config.js --watch",
    "lint": "eslint . --ext .js --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lhci": "lhci autorun",
    "docker:build": "docker build -t festival-films .",
    "docker:run": "docker run -p 3000:3000 festival-films",
    "docker:compose": "docker-compose up"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "cypress": "^13.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "@lhci/cli": "^0.11.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "express": "^4.18.2"
  }
}