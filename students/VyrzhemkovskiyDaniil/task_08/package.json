{
  "name": "tasks-tracker",
  "version": "1.0.0",
  "description": "Трекер задач - лабораторная работа 08",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "e2e": "cypress open",
    "e2e:ci": "cypress run",
    "build": "echo 'Сборка завершена'",
    "docker:build": "docker build -t tasks-tracker .",
    "docker:run": "docker run -p 3000:3000 tasks-tracker"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "cypress": "^13.6.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "tasks",
    "tracker",
    "todo",
    "lab08",
    "docker",
    "ci-cd"
  ],
  "author": "Студент",
  "license": "MIT",
  "jest": {
    "testEnvironment": "jest-environment-jsdom",
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ]
  }
}